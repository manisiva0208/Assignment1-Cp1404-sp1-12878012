BoxLayout:
    orientation: 'vertical'

    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '48'
            font_size: 48
            multiline: False
            size_hint:1, 1
        BoxLayout:
            orientation: 'vertical'
            size_hint: None, 1
            Button:
                text: 'Up'
                on_press: app.handle_increment()
            Button:
                text: 'Down'
                on_press: app.handle_decrement()

    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Convert miles to km'
            on_press: app.convert_miles()
        Label:
            id: output_label
            text: ''
            color: (1, 1, 0, 1)
